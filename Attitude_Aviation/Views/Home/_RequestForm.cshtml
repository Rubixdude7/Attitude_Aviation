@model Attitude_Aviation.Models.MaintenanceRequest

<div class="form-group">
    @Html.LabelFor(m => m.Plane_name)
    @Html.TextBoxFor(m => m.Plane_name, new { @class = "form-control" })
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Problem)
    @Html.TextAreaFor(m => m.Problem, new { @class = "form-control", rows = 4 })
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Description)
    @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
</div>

@Html.HiddenFor(m => m.ID)
<input type="submit" class="btn btn-primary" value="Save" />
