@model IEnumerable<Attitude_Aviation.Models.Plane>

@{
    ViewBag.Title = "Rental Services";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<p>Here are our planes available for rent</p>

@if((System.Web.HttpContext.Current.User != null) && System.Web.HttpContext.Current.User.Identity.IsAuthenticated)
{
    <table border="1" cellpadding="10" cellspacing="10">
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Description</td>
            <td>Stock</td>
            <td></td>
        </tr>
        @foreach (var plane in Model)
        {
            <tr>
                <td>@plane.ID</td>
                <td>@plane.Name</td>
                <td>@plane.Description</td>
                <td>@plane.Stock</td>
                <td>@Html.ActionLink("Select", "Select", new { id = plane.ID })</td>
            </tr>
        }
    </table>
}
