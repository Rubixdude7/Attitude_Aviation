@model IEnumerable<Attitude_Aviation.Models.Plane>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Planes</h2>
<p>
    @Html.ActionLink("Add Plane", "New")
</p>
<table border="1" cellpadding="10" cellspacing="10">
    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Description</td>
        <td>Stock</td>
        <td colspan="2"></td>
    </tr>
    @foreach (var plane in Model)
    {
        <tr>
            <td>@plane.ID</td>
            <td>@plane.Name</td>
            <td>@plane.Description</td>
            <td>@plane.Stock</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = plane.ID })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = plane.ID })</td>
        </tr>
    }
</table>

