@model Attitude_Aviation.Models.Plane

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<p>
    Are you sure you want to delete this entry?
</p>

<ul>
    <li>Name: @Model.Name</li>
    <li>Description: @Model.Description</li>
</ul>

@using (Html.BeginForm("DoDelete", "Planes", FormMethod.Post))
{
    @Html.HiddenFor(m => m.ID)
    <input type="submit" class="btn btn-danger" value="Yes, Delete it!" />
    @Html.ActionLink("No, back to planes", "Index")
}

